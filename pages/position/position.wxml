<view wx:if="{{role === 'HR'}}">
    <form bindsubmit="onSubmit">
        <view class="section">
            <input
                    name="name"
                    value="{{position['.value'].name}}"
                    placeholder="职位名称"
            />
        </view>
        <view class="section">
            <input
                    name="address"
                    value="{{position['.value'].address}}"
                    placeholder="所在位置"
            />
        </view>
        <view class="section">
            <textarea
                    name="description"
                    value="{{position['.value'].description}}"
                    placeholder="职位描述"
                    auto-height="true"
            />
        </view>
        <button form-type="submit" class="submit-btn">提交</button>
        <button bindtap="transitionToApply" class="submit-btn">申请</button>
    </form>
</view>
<view class="detail-box" wx:if="{{role !== 'HR'}}">
    <text class="detail-name">{{position['.value'].name}}</text>
    <text class="detail-address">{{position['.value'].address}}</text>
    <text class="detail-description">{{position['.value'].description}}</text>
    <button bindtap="transitionToApply" class="submit-btn">申请</button>
</view>