<view>
    <view wx:for="{{positions}}" wx:key="{{index}}" class="job">
        <view class="left">
            <view>{{item['.value'].name}}</view>
            <view>{{item['.value'].address}}</view>
        </view>
        <view class="right">
            <button size="mini" bindtap="transitionToEditPositionPage" data-id="{{item['.key']}}">{{role == 'HR' ? '编辑': '详情'}}</button>
            <button wx:if="{{role=='HR'}}" size="mini" type="warn" data-id="{{item['.key']}}" bindtap="deleteJobs">删除</button>
        </view>
    </view>
    <button wx:if="{{role=='HR'}}" class="btn" bindtap="transitionToCreatePositionPage">创建内推职位</button>
</view>