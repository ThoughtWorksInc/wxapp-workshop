<view>
    <view wx:for="{{jobList}}" wx:key="{{index}}" class="job">
        <view class="left">
            <view>{{item.jobName}}</view>
            <view>{{item.address}}</view>
            <view>{{item.expectAddress}}</view>
            <view>{{item.description}}</view>
        </view>
        <view class="right">
            <button size="mini" bindtap="transitionToUpdate" data-id="{{item.id}}">编辑</button>
        </view>
    </view>
    <button class="btn" bindtap="transitionToPosition">创建内推职位</button>
</view>