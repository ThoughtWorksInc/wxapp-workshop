<form bindsubmit="onSubmit">
    <view class="section">
        <input
                name="name"
                disabled="{{role=='HR' ? false : true}}"
                value="{{position['.value'].name}}"
                placeholder="Name"
        />
    </view>
    <view class="section">
        <input
                name="address"
                disabled="{{role=='HR' ? false : true}}"
                value="{{position['.value'].address}}"
                placeholder="Address"
        />
    </view>
    <view class="section">
        <textarea
                name="description"
                disabled="{{role=='HR' ? false : true}}"
                value="{{position['.value'].description}}"
                placeholder="Description"
                auto-height="true"
        />
    </view>
    <button form-type="submit" class="submit-btn">
        {{ role == 'HR' ? '提交' : '申请'}}
    </button>
</form>